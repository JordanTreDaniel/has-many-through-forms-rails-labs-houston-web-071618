<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>
    <br>
    <%= f.label "Categories (select all that apply)" %>
    <br>
    <br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>
    <br>
    <%= fields_for :categories do |cat_fields| %>
        <%= cat_fields.label :name %>
        <%= cat_fields.text_field :name %>
    <% end %>
    <br>
    <br>
    <%= f.submit "Create Post" %>
    
<% end %>
